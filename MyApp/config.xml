<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0 TYPEX" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="5000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon background="ic_launcher.png" density="ldpi" foreground="ic_launcher.png" />
        <icon background="ic_launcher.png" density="mdpi" foreground="ic_launcher.png" />
        <icon background="ic_launcher.png" density="hdpi" foreground="ic_launcher.png" />
        <icon background="ic_launcher.png" density="xhdpi" foreground="ic_launcher.png" />
        <icon background="ic_launcher.png" density="xxhdpi" foreground="ic_launcher.png" />
        <icon background="ic_launcher.png" density="xxxhdpi" foreground="ic_launcher.png" />
        <icon src="ic_launcher.png"/><!--por si no soporta las versiones adaptativas mÃ¡s del API 8 -->
        <splash src="ic_launcher.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
